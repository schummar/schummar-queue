{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "allowJs": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src"]
}
